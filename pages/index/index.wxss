/**index.wxss**/
.footer {
  width: 100%;
  display: flex;
  flex-direction: row;
  background-color: #F7F7FA;
  margin-top: 55px;
  font-family: 微软雅黑;

}
.main-page{
  font-family: 微软雅黑;
  padding: 0px;
}
.tfImg{
	text-align: center;
}
.row {
	display: flex;
	justify-content:space-around;
	margin-top: 10px;
}
.row {
	font-size: 12px;
}
.row text {
	text-align: center;
}
.train-function-part{
	padding-bottom: 10px;
}
.newsBanner{
	font-size: 14px;
}
.bannerImg{
	height: 12px;
	margin-top: 5px;
	margin-left: 10px;
	float: left;
}
.newsBanner{
	height: 30px;
}
.bannerText {
	float: left;
	height: 14px;
	margin-left: 5px;
	padding-top: 9px;	
}
.newsBanner::after {
	content: ".";
	clear: both;
	display: block;
	visibility: hidden;
}
.newsTime {
	font-size: 12px;
	margin-bottom: 10px;
	margin-right: 10px;
	color: #7C7B76;
	text-align: right;
}
.newsContent{
	margin:0 10px;
}
.newsTitle{
	padding-top: 5px;
	margin-bottom: 5px;
}
.newsBody{
	font-size: 15px;
	padding-bottom: 10px;
	word-wrap: break-word;
}
.newsBody image{
	width: 100%;
	height: 150px
}
.splitBlock{
	background-color: #EAEEEF;
	height: 5px;
}
@import "../template/tabbar.wxss";